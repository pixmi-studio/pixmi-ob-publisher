{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "lib": ["DOM", "ES2020"],
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "types": ["node", "obsidian"],
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist", "coverage"]
}